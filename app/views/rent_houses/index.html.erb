<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.rent_house') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.rent_house.name') %></th>
      <th><%= t('activerecord.attributes.rent_house.rent') %></th>
      <th><%= t('activerecord.attributes.rent_house.address') %></th>
      <th><%= t('activerecord.attributes.rent_house.age') %></th>
      <th><%= t('activerecord.attributes.rent_house.remarks') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rent_houses.each do |rent_house| %>
      <tr>
        <td><%= rent_house.name %></td>
        <td><%= rent_house.rent %>円</td>
        <td><%= rent_house.address %></td>
        <td><%= rent_house.age %>年</td>
        <td><%= rent_house.remarks %></td>
        <td><%= link_to '詳細', rent_house %></td>
        <td><%= link_to '編集', edit_rent_house_path(rent_house) %></td>
        <td><%= link_to '削除', rent_house, method: :delete, data: { confirm: '本当に削除してもよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

