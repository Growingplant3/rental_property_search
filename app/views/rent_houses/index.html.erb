<p id="notice"><%= notice %></p>

<h1>Rent Houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Age</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rent_houses.each do |rent_house| %>
      <tr>
        <td><%= rent_house.name %></td>
        <td><%= rent_house.rent %></td>
        <td><%= rent_house.address %></td>
        <td><%= rent_house.age %></td>
        <td><%= rent_house.remarks %></td>
        <td><%= link_to 'Show', rent_house %></td>
        <td><%= link_to 'Edit', edit_rent_house_path(rent_house) %></td>
        <td><%= link_to 'Destroy', rent_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

